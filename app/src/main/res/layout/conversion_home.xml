<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConversionHome">

    <TextView
        android:id="@+id/ConversionHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/conversion"
        app:layout_constraintBottom_toTopOf="@id/button_second"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/previous"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ConversionHome" />
    <Button
        android:id="@+id/pathOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Door #1"
        app:layout_constraintBottom_toTopOf="@+id/pathThree"
        app:layout_constraintEnd_toStartOf="@+id/pathTwo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ConversionHome" />

    <Button
        android:id="@+id/pathTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Door #2"
        app:layout_constraintBottom_toTopOf="@+id/pathFour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pathThree"
        app:layout_constraintTop_toBottomOf="@+id/ConversionHome" />

    <Button
        android:id="@+id/pathThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Door #3"
        app:layout_constraintBottom_toTopOf="@+id/button_second"
        app:layout_constraintEnd_toStartOf="@+id/pathFour"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pathTwo" />

    <Button
        android:id="@+id/pathFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="125dp"
        android:text="Door #4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_second"
        app:layout_constraintTop_toBottomOf="@+id/ConversionHome" />
</androidx.constraintlayout.widget.ConstraintLayout>